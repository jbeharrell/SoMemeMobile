<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/mobilebackground"
    >

    <!--<TextView android:text="@string/hello_world"-->
        <!--android:id="@+id/link_to_login"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->

    <Button android:id="@+id/link_to_login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Login"
    android:gravity="center"
    android:textSize="20dip"
    android:background="#ff363636"
    android:textColor="#9fff78"/>

    <Button android:id="@+id/link_to_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:gravity="center"
        android:textSize="20dip"
        android:layout_marginTop="10dip"
        android:background="#ff363636"
        android:textColor="#9fff78"/>

    <Button android:id="@+id/btnMemeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="#ffb3b3b3"
        android:text="Meme View"/>

    <Button android:id="@+id/btnMemeList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="#ffb3b3b3"
        android:text="Meme List"/>

    <Button android:id="@+id/btnFavorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="#ffb3b3b3"
        android:text="Favorites"/>

    <Button android:id="@+id/btnProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="#ffb3b3b3"
        android:text="View Profile"/>

    <Button android:id="@+id/btnPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="#ffb3b3b3"
        android:text="Watch Video"/>

</LinearLayout>
