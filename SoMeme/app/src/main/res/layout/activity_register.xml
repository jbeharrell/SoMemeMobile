<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#2a2a2a">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_gravity="center_horizontal"
    android:background="#2a2a2a">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1.08"
        android:layout_marginTop="10dp"
        android:weightSum="1"
        android:gravity="center_horizontal">
    <!-- Password Label -->
        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Username" android:textColor="#9fff78"
            android:textSize="20dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2" />

        <EditText android:id="@+id/username"
            android:maxLength="11"
            android:layout_height="34dp"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_marginBottom="10dip"
            android:background="#9fff78"
            android:paddingLeft="3dip"
            android:paddingRight="3dip"
            android:textColor="@android:color/black"
            android:layout_gravity="center|left"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1.08"
        android:layout_marginTop="10dp"
        android:weightSum="1"
        android:gravity="center_horizontal">
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Password"
        android:textColor="#9fff78"
        android:layout_gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_weight="0.2" />

    <EditText android:id="@+id/password"
        android:layout_height="34dp"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:password="true"
        android:background="#9fff78"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:textColor="@android:color/black"
        android:layout_gravity="center|left|top"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.5" />
</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1.08"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:weightSum="1">
    <!-- Password Label -->
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Email"
        android:textColor="#9fff78"
        android:textSize="20dp"
        android:layout_weight="0.25"
        android:layout_gravity="center_vertical" />

    <EditText android:id="@+id/email"
        android:layout_height="34dp"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:background="#9fff78"
        android:layout_weight="0.46"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:textColor="@android:color/black"
        android:layout_gravity="center|left|top"
        android:layout_marginBottom="10dp"
        android:inputType="textEmailAddress" />
</LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="1"
        android:gravity="center_horizontal">
    <!-- Password Label -->
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="First Name"
        android:textColor="#9fff78"
        android:textSize="20dp"
        android:layout_weight="0.2"
        android:layout_gravity="center_vertical"
         />





    <EditText android:id="@+id/fname"
        android:layout_height="34dp"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:background="#9fff78"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:textColor="@android:color/black"
        android:layout_gravity="center|left|top"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.5" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.12"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:weightSum="1">
    <!-- Password Label -->
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Last Name"
        android:textColor="#9fff78"
        android:layout_marginTop="5dip"
        android:layout_gravity="center_vertical"
        android:textSize="20dp"
        android:layout_weight="0.2" />

    <EditText android:id="@+id/lname"
        android:layout_height="34dp"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:background="#9fff78"
        android:layout_weight="0.5"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:textColor="@android:color/black"
        android:layout_gravity="center|left|top"
        android:layout_marginBottom="10dp" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1.08"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:layout_gravity="center_horizontal">
    <!-- Password Label -->
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Gender"
        android:textColor="#9fff78"
        android:layout_marginTop="5dip"
        android:layout_gravity="center_vertical"
        android:textSize="20dp"
        android:layout_weight="0.48" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="34dp"
        android:id="@+id/gender"
        android:entries="@array/gender_array"
        android:layout_gravity="center|left|top"
        android:background="#9fff78"
        android:choiceMode="singleChoice"
        android:textColor="@android:color/black"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.09" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1.08"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:weightSum="1">
    <!-- Password Label -->
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Date of Birth"
        android:textColor="#9fff78"
        android:layout_marginTop="5dip"
        android:layout_gravity="center_vertical"
        android:textSize="20dp"
        android:layout_weight="0.31" />

    <EditText android:id="@+id/dob"
        android:inputType="date"
        android:ems="10"
        android:maxLength="10"
        android:hint="1970-01-30"
        android:layout_height="34dp"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="5dip"
        android:background="#9fff78"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:textColor="@android:color/black"
        android:layout_gravity="center|left|top"
        android:layout_weight="0.12" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1.08"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:weightSum="1">
    <!-- Password Label -->
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Country"
        android:textColor="#9fff78"
        android:layout_gravity="center_vertical"
        android:textSize="20dp"
        android:layout_weight="0.23" />

    <EditText android:id="@+id/country"
        android:layout_height="34dp"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="5dip"
        android:background="#9fff78"
        android:layout_weight="0.48"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:textColor="@android:color/black"
        android:layout_gravity="center|left|top" />
</LinearLayout>
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:text="Register"
        android:background="#9fff78"
        android:textColor="@android:color/black"
        android:layout_marginBottom="5dip"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:text="Login"
        android:background="#9fff78"
        android:textColor="@android:color/black"
        android:layout_marginBottom="20dip"
        android:layout_gravity="center_horizontal" />


